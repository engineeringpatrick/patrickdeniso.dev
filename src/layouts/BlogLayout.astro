---
import "katex/dist/katex.min.css";
import CategoryBtn from "../components/Posts/CategoryBtn.astro";
import { categories } from "../content/config";
import Layout from "./Layout.astro";
---
<Layout title="Blog Posts">
    <div class="container mx-auto py-12 px-4">
      <div class="grid grid-cols-4 gap-6">
        
        <!-- Categories Section -->
        <div class="col-span-1 sticky top-24 self-start">
          <h2 class="text-2xl font-bold mb-4">Categories</h2>
          <ul class="space-y-2">
            {Object.entries(categories).map(([category, subCategories]) => (
              <CategoryBtn category={category} subCategories={subCategories}></CategoryBtn>
            ))}
          </ul>
        </div>
        <article class="lg:col-span-3 prose prose-lg dark:prose-invert w-full max-w-none px-4">
          <slot/>
        </article>
      </div>
    </div>
</Layout>