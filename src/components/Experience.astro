---
const {name, duration, logo, experience, current} = Astro.props;
---

<li class="mb-10 ms-6">            
    <span class="absolute flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full -start-3 ring-8 ring-white dark:ring-gray-900 dark:bg-blue-900">
        <img class="absolute inset-0 w-full h-full object-cover" src={logo}/>
    </span>
    <h3 class="flex items-center mb-1 text-lg font-semibold text-gray-900 dark:text-white">{name} {current ? <span class="bg-blue-100 text-blue-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300 ms-3">Current!</span> : <span></span>}</h3>
    <time class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">{duration}</time>
    <p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400">{experience}</p>
</li>